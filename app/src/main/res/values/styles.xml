<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/jua</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
    <item name="fontFamily">@font/jua</item>
    </style>

    <style name="RejectCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/baseColor2</item>
        <item name="colorControlActivated">@color/baseColor2</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MarkerCustomTextStyle" parent="android:TextAppearance.Small">
        <item name="android:fontFamily">monospace</item>
    </style>

</resources>
