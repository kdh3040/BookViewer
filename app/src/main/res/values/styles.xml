<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="RejectCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/baseColor2</item>
        <item name="colorControlActivated">@color/baseColor2</item>
    </style>


    <style name="MarkerCustomTextStyle" parent="android:TextAppearance.Small">
        <item name="android:fontFamily">monospace</item>
    </style>

</resources>
