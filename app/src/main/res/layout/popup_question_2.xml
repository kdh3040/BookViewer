<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/white"
android:orientation="vertical">

    <TextView
        android:id="@+id/question_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/popup_title_bg_color"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="타이틀"/>

    <TextView
        android:id="@+id/question_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="팝업 내용"/>

    <RadioGroup
        android:id="@+id/question_example_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/question_example_1"
            android:text="보기1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/question_example_2"
            android:text="보기2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <RadioButton
            android:id="@+id/question_example_3"
            android:text="보기3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <RadioButton
            android:id="@+id/question_example_4"
            android:text="보기3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:id="@+id/question_submit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/holo_blue_bright"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:text="확인"/>

</LinearLayout>