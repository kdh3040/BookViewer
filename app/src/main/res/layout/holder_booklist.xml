<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Book_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="10dp"
    android:weightSum="5"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/Book_Thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_weight="1"
        app:srcCompat="@drawable/book_1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Book_Thumbnail"
        android:layout_toLeftOf="@id/Book_Page"
        android:layout_marginLeft="2dp"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Book_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="톰소여의 모험"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/Book_Author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="작가"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/Book_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="완료하세요"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/Book_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#1a000000"
        android:text="안읽음"
        android:fontFamily="@font/jua"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="10dp"
        android:layout_weight="1"/>

</LinearLayout>