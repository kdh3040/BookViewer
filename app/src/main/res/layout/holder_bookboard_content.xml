<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:visibility="gone">

    <!-- content header line -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/contents_report_book_thumnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book_1"/>

        <RelativeLayout
            android:id="@+id/report_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/contents_report_book_thumnail">

            <TextView
                android:id="@+id/contents_report_nickname"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center|left"
                android:fontFamily="@font/jua"
                android:text="wow" />

            <TextView
                android:id="@+id/contents_report_schoolname"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/contents_report_nickname"
                android:layout_toLeftOf="@+id/contents_report_like"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/jua"
                android:textColor="@android:color/black"
                android:gravity="center|left"
                android:text="동네 초등학교" />

            <LinearLayout
                android:id="@+id/contents_report_like"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/contents_report_like_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="5dp"
                    android:layout_toLeftOf="@+id/contents_report_like_count"
                    android:src="@drawable/report_heart_on"/>

                <TextView
                    android:id="@+id/contents_report_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingRight="5dp"
                    android:layout_alignParentRight="true"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/jua"
                    android:textColor="@android:color/black"
                    android:gravity="center|right"
                    android:text="1,000" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/contents_report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="동네 초등학교"
            android:textSize="20dp"
            android:fontFamily="@font/jua"
            android:textColor="@android:color/black"
            android:gravity="center|left"
            android:layout_below="@+id/report_title"
            android:layout_toRightOf="@+id/contents_report_book_thumnail"/>

