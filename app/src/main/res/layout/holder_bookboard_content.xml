            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="left"
            android:layout_below="@+id/contents_report_title"
            android:ellipsize="end"
            android:lines="14"
            android:layout_toRightOf="@+id/contents_report_book_thumnail"/>

    </RelativeLayout>


</LinearLayout>